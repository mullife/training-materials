\newcommand\titleframe[1]
{
  \begin{frame}{#1}
    \begin{columns}[b]
      \column{0.5\textwidth}
      \Large
      #1\\
      \vspace{0.5cm}
      {\bf \@authors}\\
      \footnotesize
      \vspace{1cm}
      \tinyv
	  \vspace{1em}
	  \vspace{1em}
      \vspace{1em}
      Document updates and sources:\\
      \url{\@trainingurl}\\
      \vspace{1em}
      Reference from: \\
      http://free-electrons.com/doc/training/android\\
      \vspace{1em}
      \vspace{1em}
	  \vspace{1em}
      \column{0.3\textwidth}
      \includegraphics[height=4cm]{common/logo-square.png}
    \end{columns}
  \end{frame}
}

\AtBeginSection[]
{
  \begin{frame}{\insertsectionhead}
    \begin{columns}[b]
      \column{0.5\textwidth}
      \huge
      \insertsection\\
      \vspace{0.5cm}
      \Large
      {\bf \@authors}\\
      \footnotesize
      \vspace{1cm}
      \tinyv
      Document updates and sources:\\
      \url{\@trainingurl}\\
      \vspace{1em}
      Reference from: \\
      http://free-electrons.com/doc/training/android\\
      \column{0.3\textwidth}
      \includegraphics[height=4cm]{common/logo-square.png}
    \end{columns}
  \end{frame}
}

\AtBeginSubsection[]
{
  \begin{frame}{\insertsectionhead}
    \huge
    \begin{center}
      \insertsubsection
    \end{center}
  \end{frame}
}

%% Create a slide announcing a lab, with the beautiful worker penguin
%% on the left.
%%  first argument: slide title (will be prepended by 'Practical lab - ')
%%  second argument: contents of the slide
